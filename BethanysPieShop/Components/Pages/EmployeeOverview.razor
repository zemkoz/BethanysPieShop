@page "/employeeoverview"
@attribute [StreamRendering(true)]

<h1>Employee Overview</h1>

@if (Employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-light">
        <thead>
        <tr>
            <th></th>
            <th>Employee ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Employees)
        {
            <tr>
                <td>
                    <img
                        src="@($"https://gillcleerenpluralsight.blob.core.windows.net/person/{employee.EmployeeId}-small.jpg")"
                        class="rounded-circle"/>
                </td>
                <td>@employee.EmployeeId</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>
                    <a href="@($"employeedetail/{employee.EmployeeId}")" class="btn btn-outline-primary btn-sm mb-1">
                        Details
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
